@model List<MoneyFlow.Models.ServiceVM>

@{
}

<div class="row">
    <div class="col-sm-6">
        <h2>SERVICES</h2>
    </div>
    <div class="col-sm-6">
        <a href="/Service/newServices" class="btn btn-outline-success">New services</a>
    </div>

</div>

<hr />

<div class="row mt-5">
    <div class="col-sm-12">
            
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th style="width: 200px">Operaciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th>@item.Name</th>
                        <th>@item.Type</th>
                        <th style="width: 200px">
                            <a href="/Service/updateService/@item.ServiceId" class="btn btn-warning btn-sm"><i class="bi bi-pencil-square"></i></a>
                            <button href="#" class="btn btn-danger btn-sm" onclick="deleteItem(@item.ServiceId)"><i class="bi bi-trash3-fill"></i></button>
                        </th>

                    </tr>
                }

            </tbody>
         </table>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>

        function deleteItem(serviceId){
            // if(confirm("are you sure delete")){
            //     window.location.href = '@Url.Action("DeleteService", "Service")'  + '?id=' + serviceId;

            // }
             Swal.fire({
          title: "Are you sure?",
          text: "You won't be able to revert this!",
          icon: "warning",
          showCancelButton: true,
          confirmButtonColor: "#3085d6",
          cancelButtonColor: "#d33",
          confirmButtonText: "Yes, delete it!"
        }).then((result) => {
          if (result.isConfirmed) {
            window.location.href = '@Url.Action("DeleteService", "Service")'  + '?id=' + serviceId;
          }
        });
        }    

       

    </script>

}


